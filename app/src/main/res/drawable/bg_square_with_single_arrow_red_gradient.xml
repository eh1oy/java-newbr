<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6.0dip" />
            <gradient android:startColor="#00ffffff" android:endColor="#00ac0000" android:angle="0.0" android:centerColor="@color/red" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2.0px" android:color="@color/white" />
            <corners android:radius="6.0dip" />
        </shape>
    </item>
    <item android:gravity="center" android:drawable="@drawable/ic_single_thick_arrow" />
</layer-list>
